@model ASI.Basecode.Data.Models.CustomModels.CustomDashoardViewModel
@{
    ViewData["Title"] = "Dashboard";
    string controllerName = "";

    switch (Convert.ToString(User.FindFirst("UserRole")?.Value).ToLower())
    {
        case "user":
            controllerName = "UserTicket";
            break;
        case "support agent":
            controllerName = "AgentManageTicket";
            break;
        case "admin":
            controllerName = "AdminManageTicket";
            break;
        case "superadmin":
            controllerName = "";
            break;
        default:
            controllerName = "";
            break;
    }
}

<div class="row row-cols-xxxl-4 row-cols-lg-4 row-cols-sm-2 row-cols-1 gy-4">
    <div class="col">
        <div class="card shadow-none border bg-gradient-start-1 h-100">
            <a class="cursor-pointer" asp-action="UserTicketIndex" asp-controller="Ticket">
                <div class="card-body p-20">
                    <div class="d-flex flex-wrap align-items-center justify-content-between gap-3">
                        <div>
                            <p class="fw-medium text-primary-light mb-1">Total Tickets You've Created</p>
                            <h6 class="mb-0">@Model.TotalTicketCreatedByMe</h6>
                        </div>
                        <div class="w-50-px h-50-px bg-cyan rounded-circle d-flex justify-content-center align-items-center">
                            <iconify-icon icon="mdi:ticket" class="text-white text-2xl mb-0"></iconify-icon>
                        </div>
                    </div>
                </div>
            </a>
        </div><!-- card end -->
    </div>
    <div class="col">
        <div class="card shadow-none border bg-gradient-start-2 h-100">
            <a class="cursor-pointer" asp-action="UserTicketIndex" asp-controller="Ticket" asp-route-id="1">
                <div class="card-body p-20">
                    <div class="d-flex flex-wrap align-items-center justify-content-between gap-3">
                        <div>
                            <p class="fw-medium text-primary-light mb-1">Total Resolved Tickets</p>
                            <h6 class="mb-0">@Model.ResolvedTicketForReporterCount</h6>
                        </div>
                        <div class="w-50-px h-50-px bg-purple rounded-circle d-flex justify-content-center align-items-center">
                            <iconify-icon icon="ic:outline-task-alt" class="text-white text-2xl mb-0"></iconify-icon>
                        </div>
                    </div>
                </div>
            </a>
        </div><!-- card end -->
    </div>
    <div class="col">
        <div class="card shadow-none border bg-gradient-start-2 h-100">
            <a class="cursor-pointer" asp-action="UserTicketIndex" asp-controller="Ticket" asp-route-id="2">
                <div class="card-body p-20">
                    <div class="d-flex flex-wrap align-items-center justify-content-between gap-3">
                        <div>
                            <p class="fw-medium text-primary-light mb-1">Total Unresolved Tickets</p>
                            <h6 class="mb-0">@Model.UnresolvedTicketForReporterCount</h6>
                        </div>
                        <div class="w-50-px h-50-px bg-purple rounded-circle d-flex justify-content-center align-items-center">
                            <iconify-icon icon="mdi:alert-circle-outline" class="text-white text-2xl mb-0"></iconify-icon>
                        </div>
                    </div>
                </div>
            </a>
        </div><!-- card end -->
    </div>
</div>