@model ASI.Basecode.Data.Models.User

@{
    ViewData["Title"] = "Index";
    Layout = null;
    var errorMsg = TempData["ErrorMsg"];
}

<!-- meta tags and other links -->
<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AssistHub - Log In</title>
    <link rel="icon" type="image/png" href="~/assets/images/favicon.png" sizes="16x16">
    <!-- remix icon font css  -->
    <link href="~/assets/css/remixicon.css" rel="stylesheet" />
    <!-- BootStrap css -->
    <link href="~/assets/css/lib/bootstrap.min.css" rel="stylesheet" />
    <!-- Apex Chart css -->
    <link href="~/assets/css/lib/apexcharts.css" rel="stylesheet" />
    <!-- Data Table css -->
    <link href="~/assets/css/lib/datatables.min.css" rel="stylesheet" />
    <!-- Text Editor css -->
    <link href="~/assets/css/lib/editor-katex.min.css" rel="stylesheet" />
    <link href="~/assets/css/lib/editor.atom-one-dark.min.css" rel="stylesheet" />
    <link href="~/assets/css/lib/editor.quill.snow.css" rel="stylesheet" />
    <!-- Date picker css -->
    <link href="~/assets/css/lib/flatpickr.min.css" rel="stylesheet" />
    <!-- Calendar css -->
    <link href="~/assets/css/lib/full-calendar.css" rel="stylesheet" />
    <!-- Vector Map css -->
    <link href="~/assets/css/lib/jquery-jvectormap-2.0.5.css" rel="stylesheet" />
    <!-- Popup css -->
    <link href="~/assets/css/lib/magnific-popup.css" rel="stylesheet" />
    <!-- Slick Slider css -->
    <link href="~/assets/css/lib/slick.css" rel="stylesheet" />
    <!-- main css -->
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <!--toastr css-->
    <link href="~/toastr/toastr.min.css" rel="stylesheet" />
</head>
<body>
    <partial name="_Notification" />
    <section class="auth bg-base d-flex flex-wrap">
        <div class="auth-left d-lg-block d-none">
            <div class="d-flex align-items-center flex-column h-100 justify-content-center">
                <img src="~/assets/images/auth/auth-img.png" alt="" style="height:100vh !important">
            </div>
        </div>
        <div class="auth-right py-32 px-24 d-flex flex-column justify-content-center">
            <div class="max-w-464-px mx-auto w-100">
                <div>
                    @* <a href="index.html" class="mb-40 max-w-290-px">
                        <img src="~/assets/images/logo.png" alt="">
                    </a> *@
                    <h3>AssistHub</h3>
                    <h4 class="mb-12">Sign In to your Account</h4>
                    <p class="mb-32 text-secondary-light text-lg">Welcome back! please enter your detail</p>
                </div>
                <form asp-action="Login" method="post">
                    <div class="icon-field mb-16">
                        <span class="icon top-50 translate-middle-y">
                            <iconify-icon icon="mage:email"></iconify-icon>
                        </span>
                        <input asp-for="Email" type="email" class="form-control h-56-px bg-neutral-50 radius-12" placeholder="Email">
                    </div>
                    <div class="position-relative mb-20">
                        <div class="icon-field">
                            <span class="icon top-50 translate-middle-y">
                                <iconify-icon icon="solar:lock-password-outline"></iconify-icon>
                            </span>
                            <input asp-for="Password" type="password" class="form-control h-56-px bg-neutral-50 radius-12" id="your-password" placeholder="Password">
                        </div>
                        <span class="toggle-password ri-eye-line cursor-pointer position-absolute end-0 top-50 translate-middle-y me-16 text-secondary-light" data-toggle="#your-password"></span>
                    </div>
                    @if (TempData["ErrorMsg"] != null)
                    {
                        <p style="color:red;">@TempData["ErrorMsg"]</p>
                    }
                    <div class="">
                        <div class="d-flex justify-content-between gap-2">
                            <div class="form-check style-check d-flex align-items-center">
                                <input class="form-check-input border border-neutral-300" type="checkbox" name="rememberMe" id="remeber">
                                <label class="form-check-label" for="remeber">Remember me </label>
                            </div>
                            <a asp-action="ForgotPassword" class="text-primary-600 fw-medium">Forgot Password?</a>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary text-sm btn-sm px-12 py-16 w-100 radius-12 mt-32"> Sign In</button>

                </form>
            </div>
        </div>
    </section>

    <!-- jQuery library js -->
    <script src="~/assets/js/lib/jquery-3.7.1.min.js"></script>
    <!-- Bootstrap js -->
    <script src="~/assets/js/lib/bootstrap.bundle.min.js"></script>
    <!-- Apex Chart js -->
    <script src="~/assets/js/lib/apexcharts.min.js"></script>
    <!-- Data Table js -->
    <script src="~/assets/js/lib/dataTables.min.js"></script>
    <!-- Iconify Font js -->
    <script src="~/assets/js/lib/iconify-icon.min.js"></script>
    <!-- jQuery UI js -->
    <script src="~/assets/js/lib/jquery-ui.min.js"></script>
    <!-- Vector Map js -->
    <script src="~/assets/js/lib/jquery-jvectormap-2.0.5.min.js"></script>
    <script src="~/assets/js/lib/jquery-jvectormap-world-mill-en.js"></script>
    <!-- Popup js -->
    <script src="~/assets/js/lib/magnifc-popup.min.js"></script>
    <!-- Slick Slider js -->
    <script src="~/assets/js/lib/slick.min.js"></script>
    <!-- main js -->
    <script src="~/assets/js/app.js"></script>

    <script>
        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }
        // ================== Password Show Hide Js Start ==========
        function initializePasswordToggle(toggleSelector) {
            $(toggleSelector).on('click', function () {
                $(this).toggleClass("ri-eye-off-line");
                var input = $($(this).attr("data-toggle"));
                if (input.attr("type") === "password") {
                    input.attr("type", "text");
                } else {
                    input.attr("type", "password");
                }
            });
        }
        // Call the function
        initializePasswordToggle('.toggle-password');
        // ========================= Password Show Hide Js End ===========================
    </script>

</body>
</html>
