@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AssistHub -  Forgot Password</title>
    <link rel="icon" type="image/png" href="~/assets/images/favicon.png" sizes="16x16">
    <!-- remix icon font css  -->
    <link href="~/assets/css/remixicon.css" rel="stylesheet" />
    <!-- BootStrap css -->
    <link href="~/assets/css/lib/bootstrap.min.css" rel="stylesheet" />
    <!-- Apex Chart css -->
    <link href="~/assets/css/lib/apexcharts.css" rel="stylesheet" />
    <!-- Data Table css -->
    <link href="~/assets/css/lib/datatables.min.css" rel="stylesheet" />
    <!-- Text Editor css -->
    <link href="~/assets/css/lib/editor-katex.min.css" rel="stylesheet" />
    <link href="~/assets/css/lib/editor.atom-one-dark.min.css" rel="stylesheet" />
    <link href="~/assets/css/lib/editor.quill.snow.css" rel="stylesheet" />
    <!-- Date picker css -->
    <link href="~/assets/css/lib/flatpickr.min.css" rel="stylesheet" />
    <!-- Calendar css -->
    <link href="~/assets/css/lib/full-calendar.css" rel="stylesheet" />
    <!-- Vector Map css -->
    <link href="~/assets/css/lib/jquery-jvectormap-2.0.5.css" rel="stylesheet" />
    <!-- Popup css -->
    <link href="~/assets/css/lib/magnific-popup.css" rel="stylesheet" />
    <!-- Slick Slider css -->
    <link href="~/assets/css/lib/slick.css" rel="stylesheet" />
    <!-- main css -->
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <!--toastr css-->
    <link href="~/toastr/toastr.min.css" rel="stylesheet" />
</head>
<body>
    <partial name="_Notification" />
    <div class="py-32 px-24 d-flex flex-column justify-content-center">
        <div class="max-w-464-px mx-auto w-100">
            <div>
                <h4 class="mb-12">Forgot Password</h4>
                <p class="mb-32 text-secondary-light text-lg">Enter the email address associated with your account and we will send you a link to reset your password.</p>
            </div>
            <form asp-action="ForgotPassword" asp-action="post">
                <div class="icon-field">
                    <span class="icon top-50 translate-middle-y">
                        <iconify-icon icon="mage:email"></iconify-icon>
                    </span>
                    <input type="email" class="form-control h-56-px bg-neutral-50 radius-12" placeholder="Enter Email" name="email">
                </div>
                <button type="submit" class="btn btn-primary text-sm btn-sm px-12 py-16 w-100 radius-12 mt-32" data-bs-toggle="modal" data-bs-target="#exampleModal">Continue</button>

                <div class="text-center">
                    <a asp-action="LogIn" class="text-primary-600 fw-bold mt-24">Back to Sign In</a>
                </div>

                <div class="mt-120 text-center text-sm">
                    <p class="mb-0">Already have an account? <a asp-action="LogIn" class="text-primary-600 fw-semibold">Sign In</a></p>
                </div>
            </form>
        </div>
    </div>

    <!-- jQuery library js -->
    <script src="~/assets/js/lib/jquery-3.7.1.min.js"></script>
    <!-- Bootstrap js -->
    <script src="~/assets/js/lib/bootstrap.bundle.min.js"></script>
    <!-- Apex Chart js -->
    <script src="~/assets/js/lib/apexcharts.min.js"></script>
    <!-- Data Table js -->
    <script src="~/assets/js/lib/dataTables.min.js"></script>
    <!-- Iconify Font js -->
    <script src="~/assets/js/lib/iconify-icon.min.js"></script>
    <!-- jQuery UI js -->
    <script src="~/assets/js/lib/jquery-ui.min.js"></script>
    <!-- Vector Map js -->
    <script src="~/assets/js/lib/jquery-jvectormap-2.0.5.min.js"></script>
    <script src="~/assets/js/lib/jquery-jvectormap-world-mill-en.js"></script>
    <!-- Popup js -->
    <script src="~/assets/js/lib/magnifc-popup.min.js"></script>
    <!-- Slick Slider js -->
    <script src="~/assets/js/lib/slick.min.js"></script>
    <!-- main js -->
    <script src="~/assets/js/app.js"></script>
</body>
</html>
